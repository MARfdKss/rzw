<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ll="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.ishansong.eagle.widget.tab.SlidingTabLayout
        android:id="@+id/tl_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        tl:tl_indicator_color="#fedd50"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width="75dp"
        tl:tl_tab_padding="10dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="#000000"
        tl:tl_textUnselectColor="#666666"
        tl:tl_textsize="16sp" />

    <android.support.v4.IView.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>